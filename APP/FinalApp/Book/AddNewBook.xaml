<Window x:Class="FinalApp.Book.AddNewBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalApp.Book"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="افزودن کتاب جدید" Height="450" Width="250" FontFamily="B Zar" Loaded="Window_Loaded">
    <Grid Background="#B3D9FF">
        <Border BorderBrush="Black" BorderThickness="1" Margin="5,5,5,5">
            <Grid>
                <TextBlock x:Name="lbl1" Margin="132,3,7,401" Text="نام کتاب" TextAlignment="Right"/>
                <TextBox x:Name="txtTitle" Height="23" Margin="7,21,7,378"/>
                <TextBlock x:Name="lbl2" Margin="132,44,7,360" Text="خلاصه" TextAlignment="Right"/>
                <TextBox x:Name="txtSummary" Height="23" Margin="7,62,7,337"/>
                <TextBlock x:Name="lbl2_Copy" Margin="132,85,7,319" Text="ژانر" TextAlignment="Right"/>
                <ComboBox x:Name="txtGenre" Height="23" Margin="7,103,7,296"/>
                <TextBlock x:Name="lbl2_Copy1" Margin="175,252,7,152" Text="قیمت" TextAlignment="Right"/>
                <TextBox x:Name="txtPrice" Height="23" Margin="130,270,7,129"/>
                <TextBlock x:Name="lbl2_Copy2" Margin="132,126,7,278" Text="ناشر" TextAlignment="Right"/>
                <ComboBox x:Name="txtPublisher" Height="23" Margin="7,144,7,255"/>
                <TextBlock x:Name="lbl2_Copy3" Margin="132,167,7,237" Text="نویسنده" TextAlignment="Right"/>
                <ComboBox x:Name="txtAuthor" Height="23" Margin="7,185,7,214"/>
                <TextBlock x:Name="lbl2_Copy4" Margin="68,252,114,152" Text="تعداد" TextAlignment="Right"/>
                <TextBox x:Name="txtQuantity" Height="23" Margin="7,270,114,129"/>
                <CheckBox x:Name="chbHasDiscount" IsChecked="False" Content="آیا این محصول شامل تخفیف می باشد؟" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FlowDirection="RightToLeft" FontSize="9" Margin="7,298,7,109" Checked="chbHasDiscount_Checked" Unchecked="chbHasDiscount_Unchecked"/>
                <TextBlock x:Name="lbl2_Copy5" Margin="175,312,7,92" Text="نوع تخفیف" TextAlignment="Right"/>
                <ComboBox x:Name="txtDiscountType" IsEnabled="False" Height="23" Margin="130,330,7,69"/>
                <TextBlock x:Name="lbl2_Copy6" Margin="68,312,114,92" Text="مقدار" TextAlignment="Right"/>
                <TextBox x:Name="txtDiscountAmount" IsEnabled="False" Height="23" Margin="7,330,114,69"/>
                <CheckBox x:Name="chbHasCollection" IsChecked="False" Content="آیا این محصول دارای مجموعه می باشد؟" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FlowDirection="RightToLeft" FontSize="9" Margin="7,361,7,46"/>
                <TextBlock x:Name="lbl2_Copy7" Margin="132,208,7,196" Text="تاریخ تالیف" TextAlignment="Right"/>
                <DatePicker x:Name="dtpWriteDate" Height="23" Margin="7,226,7,173"/>


                <Button x:Name="btnAddNewBook" Content="افزودن" Height="30" Width="160" Margin="39,382,39,10" Click="btnAddNewBook_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
