<Window x:Class="FinalApp.Book.AddNewPublisher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalApp.Book"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="افزودن ناشر" Height="160" Width="300" FontFamily="B Zar" FontSize="20" Loaded="Window_Loaded">
    <Grid Background="#B3D9FF">
        <TextBlock Height="30" Margin="15,27,15,87" Text=" ناشر:" FlowDirection="RightToLeft"  />
        <TextBox x:Name="txtNewPublisher" Height="30" Margin="15,0,15,0" />
        <Button x:Name="btnAddNewPublisher" Content="افزودن" Width="100" Height="33" Margin="100,101,100,10" Click="btnAddNewPublisher_Click"/>
    </Grid>
</Window>
