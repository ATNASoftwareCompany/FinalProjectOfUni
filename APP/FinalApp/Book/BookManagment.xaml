<Window x:Class="FinalApp.Book.BookManagment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalApp.Book"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="مدیریت کتاب ها" Height="700" Width="1000" FontFamily="B Zar" Loaded="Window_Loaded">
    <Grid Background="#B3D9FF">
        <!--ایجاد کتاب-->
        <Border Height="250" Width="600" Margin="390,10,10,424" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <Button x:Name="btnAddNewBook" Content="افزودن کتاب جدید" Height="25" Width="80" VerticalAlignment="Top" Margin="10,10,508,0" Click="btnAddNewBook_Click" />
                <DataGrid x:Name="BooksDataGrid" Margin="10,40,10,10" ItemsSource="{Binding}" VerticalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="نام کتاب"/>
                        <DataGridTextColumn Header="تعداد"/>
                        <DataGridTextColumn Header="نویسنده"/>
                        <DataGridTextColumn Header="ناشر"/>
                        <DataGridTextColumn Header="قیمت"/>
                        <DataGridTextColumn Header="تاریخ تغییرات"/>
                        <DataGridTemplateColumn Header="مجموعه ها">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnBookCollectionDetails" Content="مشاهده" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!--مدیریت مجموعه ها-->
        <Border Height="250" Margin="10,10,628,424" BorderThickness="1" BorderBrush="Black">



        </Border>

        <!--ایجاد ژانر-->
        <Border Margin="10,279,670,57" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت ژانر ها" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,-1,0" Width="51"/>
                <DataGrid x:Name="GenresDataGrid" Margin="9,35,9,9"  ItemsSource="{Binding}" VerticalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ردیف"/>
                        <DataGridTextColumn Header="ژانر"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnAddNewGenre" Content="افزودن ژانر جدید" Height="25" Width="80" VerticalAlignment="Top" Margin="9,9,229,0"   />
            </Grid>

        </Border>

        <!--ایجاد نویسنده-->
        <Border Margin="344,279,344,57" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت نویسندگان" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,-1,0" Width="60"/>
                <DataGrid x:Name="AuthorsDataGrid" Margin="9,35,9,9"  ItemsSource="{Binding}" VerticalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ردیف"/>
                        <DataGridTextColumn Header="نام نویسنده"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnAddNewAuthor" Content="افزودن نویسنده جدید" Height="25" VerticalAlignment="Top" Margin="9,9,216,0"   />
            </Grid>
        </Border>

        <!--افزودن ناشر-->
        <Border Margin="678,279,10,57" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت ناشران" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,-1,0" Width="51"/>
                <DataGrid x:Name="PublishersDataGrid" Margin="9,35,9,9"  ItemsSource="{Binding}" VerticalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ردیف"/>
                        <DataGridTextColumn Header="نام ناشر"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnAddNewPublisher" Content="افزودن ناشر جدید" Height="25" VerticalAlignment="Top" Margin="9,9,216,0" Click="btnAddNewPublisher_Click"   />
            </Grid>
        </Border>
    </Grid>
</Window>
