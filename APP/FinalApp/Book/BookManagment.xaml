<Window x:Class="FinalApp.Book.BookManagment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalApp.Book"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="مدیریت کتاب ها" Height="700" Width="1000" FontFamily="B Zar" FontSize="16" Loaded="Window_Loaded">
    <Grid Background="#B3D9FF">
        <!--ایجاد کتاب-->
        <Border Height="215" Width="600" Margin="370,-5,10,400" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت کتاب ها" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,4,0" Width="51"/>
                <Button x:Name="btnAddNewBook" Content="افزودن کتاب جدید" Height="25" VerticalAlignment="Top" Margin="10,12,480,0" Click="btnAddNewBook_Click" />
                <DataGrid x:Name="BooksDataGrid" Background="#F5F5DC" AutoGenerateColumns="False" Margin="10,40,10,10" ItemsSource="{Binding}" VerticalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black" Grid.ColumnSpan="2" SelectionChanged="BooksDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding RowNumber}" Header="ردیف" Width="Auto"/>
                        <DataGridTextColumn Binding="{Binding BookTitle}" Header="نام کتاب" Width="*"/>
                        <DataGridTextColumn Width="*" Binding="{Binding Quantity}" Header="تعداد(جلد)"/>
                        <DataGridTextColumn Width="*" Binding="{Binding BookGenre}" Header="ژانر"/>
                        <DataGridTextColumn Width="*" Binding="{Binding Author}" Header="نویسنده"/>
                        <DataGridTextColumn Width="*" Binding="{Binding Publisher}" Header="ناشر"/>
                        <DataGridTextColumn Width="*" Binding="{Binding Price}" Header="قیمت(تومان)"/>
                        <DataGridTextColumn Width="*" Binding="{Binding WriteDate}" Header="تاریخ تالیف"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!--مدیریت مجموعه ها-->
        <Border Margin="10,20,628,424" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت  ها" HorizontalAlignment="Right"  VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,4,0" Width="51"/>
                
                
            </Grid>
        </Border>

        <!--ایجاد ژانر-->
        <Border Margin="10,279,670,57" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت ژانر ها" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,-1,0" Width="51"/>
                <DataGrid x:Name="GenresDataGrid" Background="#F5F5DC" AutoGenerateColumns="False" Margin="9,35,9,9" ItemsSource="{Binding}"  VerticalContentAlignment="Center" FlowDirection="RightToLeft" IsReadOnly="True" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black" SelectionChanged="GenresDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding RowNumber}" Header="ردیف" Width="Auto"/>
                        <DataGridTextColumn Binding="{Binding Genre}" Header="ژانر" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnAddNewGenre" Content="افزودن ژانر جدید" Height="25" VerticalAlignment="Top" Margin="9,9,200,0" Click="btnAddNewGenre_Click"   />
            </Grid>

        </Border>

        <!--ایجاد نویسنده-->
        <Border Margin="344,279,344,57" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت نویسندگان" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,-1,0" Width="60"/>
                <DataGrid x:Name="AuthorsDataGrid" Background="#F5F5DC" AutoGenerateColumns="False" Margin="9,35,9,9"  ItemsSource="{Binding}" VerticalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black" SelectionChanged="AuthorsDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding RowNumber}" Header="ردیف" Width="Auto"/>
                        <DataGridTextColumn Binding="{Binding Author}" Header="نام نویسنده" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnAddNewAuthor" Content="افزودن نویسنده جدید" Height="25" VerticalAlignment="Top" Margin="9,9,170,0" Click="btnAddNewAuthor_Click"   />
            </Grid>
        </Border>

        <!--افزودن ناشر-->
        <Border Margin="678,279,10,57" BorderThickness="1" BorderBrush="Black">
            <Grid>
                <TextBlock Text="مدیریت ناشران" HorizontalAlignment="Right" VerticalAlignment="Top" Height="22" FontSize="10"  Margin="0,-15,0,0" Width="51"/>
                <DataGrid x:Name="PublishersDataGrid" Background="#F5F5DC" AutoGenerateColumns="False" Margin="9,35,9,9"  ItemsSource="{Binding}" VerticalContentAlignment="Center" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" CanUserAddRows="False" BorderThickness="1" BorderBrush="Black" SelectionChanged="PublishersDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding RowNumber}" Header="ردیف" Width="Auto"/>
                        <DataGridTextColumn Binding="{Binding Publisher}" Header="نام ناشر" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnAddNewPublisher" Content="افزودن ناشر جدید" Height="25" VerticalAlignment="Top" Margin="9,9,180,0" Click="btnAddNewPublisher_Click"   />
            </Grid>
        </Border>
        <Image Margin="10,610,935,10" Source="/Images/icons8-return-48.png" ToolTip="خروج" Stretch="Fill" Height="40" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
    </Grid>
</Window>
