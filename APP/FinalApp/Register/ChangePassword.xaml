<Window x:Class="FinalApp.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Title="ChangePassword" Height="250" Width="400" FontFamily="B Titr">
    <Border BorderThickness="5" BorderBrush="#494947" CornerRadius="15">
        <Grid Background="#494947">
            <Border BorderThickness="5" BorderBrush="#44CCFF" CornerRadius="15" Margin="5,5,5,5">

                <Grid Background="#44CCFF" >
                    <TextBlock Text="بازیابی کلمه عبور" FontSize="16" Margin="126,0,126,178" TextAlignment="Center"/>
                    <TextBlock Text="کلمه عبور جدید" TextAlignment="Right" FontSize="14" Margin="238,38,21,148"/>
                    <PasswordBox x:Name="txtNewPassword" Height="30" Margin="18,69,18,121"/>
                    <Button x:Name="btnRestorePassword" Height="30" Margin="194,179,60,11" Content="تایید" Click="btnRestorePassword_Click" />
                    <Button x:Name="btnCancel" Height="30" Margin="60,179,194,11" Content="انصراف" Click="btnCancel_Click"/>
                    <TextBlock Text="تکرار کلمه عبور جدید" TextAlignment="Right" FontSize="14" Margin="238,103,21,83"/>
                    <PasswordBox x:Name="txtConfirmNewPassword" Height="30" Margin="18,134,18,56"/>
                </Grid>


            </Border>
        </Grid>
    </Border>
</Window>
