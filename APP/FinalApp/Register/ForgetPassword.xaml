        xmlns:local="clr-namespace:FinalApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Title="ForgetPassword" Height="250" Width="400" FontFamily="B Titr">
