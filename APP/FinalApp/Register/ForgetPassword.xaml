                    <TextBox x:Name="txtPhoneNo" Height="30" Margin="18,95,18,95"/>
                    <Button x:Name="btnAuthenticate" Height="30" Margin="194,145,60,45" Content="بازیابی کلمه عبور" Click="btnAuthenticate_Click"/>
                    <Button x:Name="btnCancel" Height="30" Margin="60,145,194,45" Content="انصراف" Click="btnCancel_Click"/>
                </Grid>


            </Border>
        </Grid>
