<Window x:Class="FinalApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Title="Login" Height="450" Width="300" FontFamily="B Titr" Loaded="Window_Loaded" >
    <Border BorderThickness="5" BorderBrush="#494947" CornerRadius="15">
        <Grid Background="#494947">
            <Border BorderThickness="5" BorderBrush="#44CCFF" CornerRadius="15" Margin="10,10,10,10">
                <Grid Background="#44CCFF" >
                    <TextBlock Text="نرم افزار مدیریت کتابخانه" FontSize="16" Margin="52,0,52,377" TextAlignment="Center"/>
                    <TextBlock Text="خوش آمدید" FontSize="12" Margin="92,26,92,351" TextAlignment="Center"/>
                    <Border Margin="10,116,10,136" BorderThickness="1" BorderBrush="Gray"/>
                    <TextBlock Text="نام کاربری" TextAlignment="Right" Margin="166,132,21,253"/>
                    <TextBox x:Name="txtUserName" Height="30" Margin="18,157,18,223"/>
                    <TextBlock Text="کلمه عبور" TextAlignment="Right" Margin="166,191,21,194"/>
                    <PasswordBox x:Name="txtPassword" Height="30" Margin="18,216,18,164"/>
                    <Image Margin="241,0,0,391" ToolTip="خروج" Source="/Images/icons8-close-30.png" Stretch="Fill" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>

                </Grid>

            </Border>
            <Button Height="30" Margin="82,302,82,108" Content="ورود" Click="Button_Click"/>
            <TextBlock TextAlignment="Right" Margin="113,337,113,86" FontSize="9" >
                <Hyperlink>
                    فراموشی کلمه عبور
                </Hyperlink>
            </TextBlock>
            <TextBlock TextAlignment="Right" Margin="132,354,132,71" FontSize="9" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown">
                <Hyperlink>
                    ثبت نام
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Border>
</Window>
