<Window x:Class="FinalApp.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalApp"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="ثبت نام کاربر" Height="600" Width="400" FontFamily="B Zar">
    <Grid Background="#B3D9FF">
        <Border Height="570" Width="385" Background="#E292B6" BorderBrush="#E292B6" CornerRadius="10">
            <Grid >

                <Border Background="#86DEB7" BorderBrush="#E292B6" CornerRadius="10" Margin="10,10,10,10">
                    <Grid >
                        <TextBlock Text="ثبت نام" HorizontalAlignment="Center"  FontSize="30"  FontWeight="Bold" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <TextBlock Text=":نام" Height="25" FontSize="20" FontWeight="Bold" TextAlignment="Center" RenderTransformOrigin="1.787,-3.939" Margin="301,84,26,441" />
                        <TextBox x:Name="txtName" Height="30" Width="300" Margin="39,110,26,410"/>
                        <TextBlock Text=":نام خانوادگی" Height="45" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="232,156,26,349" />
                        <TextBox x:Name="txtFamily" Height="30" Width="300" Margin="39,184,26,336"/>
                        <TextBlock Text=":تاریخ تولد" Height="25" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="257,230,26,295" />
                        <DatePickerTextBox x:Name="txtBirthDate" Height="30" Width="300" Margin="39,258,26,262"/>
                        <TextBlock Text=":شماره همراه" Height="25" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="239,302,26,223" />
                        <TextBox x:Name="txtMobile" Height="30" Width="300" Margin="39,329,26,191"/>
                        <TextBlock Text=":ایمیل" Height="25" Width="50" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="289,369,26,156" />
                        <TextBox x:Name="txtEmail" Height="30" Width="300" Margin="39,396,26,124"/>

                        <Button x:Name="btnRegister" Content="ثبت" Foreground="Green" FontSize="25" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Height="40" Margin="201,465,26,45" Click="btnRegister_Click" />
                        <Button x:Name="btnCancelRegister" Content="انصراف" Foreground="Red" FontSize="25" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Height="40" Margin="39,465,193,45" />
                    </Grid>

                </Border>

            </Grid>
        </Border>

    </Grid>
</Window>
